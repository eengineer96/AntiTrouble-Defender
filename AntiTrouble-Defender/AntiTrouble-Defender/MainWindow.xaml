<Window x:Class="AntiTrouble_Defender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntiTrouble_Defender"
        mc:Ignorable="d"
        Title="AntiTrouble" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Background="#FFD2EFF9" Margin="0,0,0,0">
        <TextBox x:Name="Udvozles" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Üdv, User!" VerticalAlignment="Top" Width="120" Background="#FFD2EFF9"/>
        <ListBox x:Name="Lista" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="50,50,50,100" Background="#FFA3D6FD" />
        <Button Content="Vizsgálat" HorizontalAlignment="Left" Margin="50,0,0,45" RenderTransformOrigin="-0.648,-0.338" Width="100" FontSize="14" FontWeight="Bold" Background="#FF01A4EA" Foreground="White" Click="Vizsgalat" Height="30" VerticalAlignment="Bottom" />
        <Button Content="Megjelölés" HorizontalAlignment="Left" Margin="200,0,0,45" RenderTransformOrigin="-0.648,-0.338" Width="100" FontSize="14" FontWeight="Bold" Background="#FF01A4EA" Foreground="White" Click="Megjeloles" Height="30" VerticalAlignment="Bottom" />
        <Button Content="Kilépés" Margin="0,0,50,30" RenderTransformOrigin="-0.648,-0.338" FontSize="14" FontWeight="Bold" Background="#FF01A4EA" Foreground="White" Click="Kilepes" HorizontalAlignment="Right" Width="80" Height="30" VerticalAlignment="Bottom" />
        <Button Content="Előzmények" HorizontalAlignment="Left" Margin="350,0,0,45" RenderTransformOrigin="-0.648,-0.338" Width="100" FontSize="14" FontWeight="Bold" Background="#FF01A4EA" Foreground="White" Click="Button_Elozmenyek" Height="30" VerticalAlignment="Bottom" />
    </Grid>
</Window>
